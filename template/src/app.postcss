/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html,body {
  @apply w-full h-full;
}
::-webkit-scrollbar {
  @apply w-2;
}

::-webkit-scrollbar-track {
  @apply bg-primary;
}

::-webkit-scrollbar-thumb {
  @apply bg-primary-content;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-primary;
}